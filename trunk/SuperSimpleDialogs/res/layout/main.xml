<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:gravity="center" />
    <Button
        android:text="@string/toastbutton_text"
        android:id="@+id/buttonToast"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onToastButtonClick"></Button>
    <Button
        android:text="@string/dialogbutton_text"
        android:id="@+id/buttonDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onDialogButtonClick"></Button>
    <Button
        android:text="@string/datedialogbutton_text"
        android:id="@+id/buttonDateDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onDateDialogButtonClick"></Button>
</LinearLayout>
